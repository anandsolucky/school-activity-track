rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the document belongs to the current user
    function isOwner(teacherId) {
      return request.auth.uid == teacherId;
    }

    // Teachers collection
    match /teachers/{teacherId} {
      allow read, write: if isAuthenticated() && isOwner(teacherId);
    }

    // Classes collection
    match /classes/{classId} {
      allow read: if isAuthenticated() && isOwner(resource.data.teacherId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.teacherId);
      allow update, delete: if isAuthenticated() && isOwner(resource.data.teacherId);
    }

    // Students collection
    match /students/{studentId} {
      allow read: if isAuthenticated() && exists(/databases/$(database)/documents/classes/$(resource.data.classId)) 
        && get(/databases/$(database)/documents/classes/$(resource.data.classId)).data.teacherId == request.auth.uid;
      allow create: if isAuthenticated() && exists(/databases/$(database)/documents/classes/$(request.resource.data.classId)) 
        && get(/databases/$(database)/documents/classes/$(request.resource.data.classId)).data.teacherId == request.auth.uid;
      allow update, delete: if isAuthenticated() && exists(/databases/$(database)/documents/classes/$(resource.data.classId)) 
        && get(/databases/$(database)/documents/classes/$(resource.data.classId)).data.teacherId == request.auth.uid;
    }

    // Activities collection
    match /activities/{activityId} {
      allow read: if isAuthenticated() && isOwner(resource.data.teacherId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.teacherId);
      allow update, delete: if isAuthenticated() && isOwner(resource.data.teacherId);
    }
  }
} 