rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the document belongs to the current user
    function isOwner(teacherId) {
      return request.auth.uid == teacherId;
    }

    // Teachers collection
    match /teachers/{teacherId} {
      allow read, write: if isAuthenticated() && isOwner(teacherId);
    }

    // Classes collection - simplified rules
    match /classes/{classId} {
      allow read, write: if isAuthenticated() && (
        resource == null || 
        resource.data.teacherId == request.auth.uid ||
        request.resource.data.teacherId == request.auth.uid
      );
    }

    // Students collection - simplified rules
    match /students/{studentId} {
      allow read, write: if isAuthenticated() && (
        resource == null ||
        get(/databases/$(database)/documents/classes/$(resource.data.classId)).data.teacherId == request.auth.uid ||
        get(/databases/$(database)/documents/classes/$(request.resource.data.classId)).data.teacherId == request.auth.uid
      );
    }

    // Activities collection - simplified rules
    match /activities/{activityId} {
      allow read, write: if isAuthenticated() && (
        resource == null ||
        resource.data.teacherId == request.auth.uid ||
        request.resource.data.teacherId == request.auth.uid
      );
    }
  }
} 